/* pages/device/device.wxss */
.bg {
  background: #f6f6f6;
  height: 100vh;
}

.out {
  padding-top: 25rpx;
  box-sizing: border-box;
}

.row {
  background: #fff;
  padding: 20rpx 30rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.data {
  line-height: 53rpx;
  height: 70rpx;
  overflow: hidden;
  font-size: 32rpx;

}

.data image {
  float: left;
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.title {
  line-height: 56rpx;
  height: 70rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  border-bottom: 1px solid #efefef;
}

.title image {
  width: 70rpx;
  height: 70rpx;
  float: left;
  margin-right: 15rpx;
}

.title text {
  font-weight: normal;
  font-size: 30rpx;
}

.data text {
  font-size: 28rpx;
  color: #666;
  width: 23%;
  display: inline-block;

}

.text1 {
  flex: 3;
}

.text2 {
  flex: 4;
}

.text1 .title {
  font-family: "microsoft yahei";
  font-size: 35rpx;
}

.text2 .title {
  font-family: "microsoft yahei";
  font-size: 35rpx;
}


.page {
  height: 100%;
}

.background {
  width: 100%;
  height: 100%;
  position: fixed;
  background-size: 100% 100%;
  z-index: -1;
}

.container {
  width: 100%;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.left {
  width: 50%;
  height: 10rpx;
  color: #888;
  font-size: 40rpx;
}

.right {
  width: 50%;
  height: 10rpx;
  color: #ff0000;
  font-size: 40rpx;
}